	"item": [
		{
			"name": "01 - Registrar Novo Usuário",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"usuario_id\", jsonData.id);",
							"    pm.test(\"Status code is 201\", function () {",
							"        pm.response.to.have.status(201);",
							"    });",
							"    pm.test(\"Usuario criado com sucesso\", function () {",
							"        pm.expect(jsonData).to.have.property('id');",
							"        pm.expect(jsonData).to.have.property('nome');",
							"        pm.expect(jsonData).to.have.property('email');",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"nome\": \"João da Silva\",\n  \"email\": \"joao.silva@example.com\",\n  \"senha\": \"Senha@123\",\n  \"confirmarSenha\": \"Senha@123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/usuarios/registrar",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"usuarios",
						"registrar"
					]
				},
				"description": "Registra um novo usuário no sistema. Não requer autenticação."
			},
			"response": []
		},
